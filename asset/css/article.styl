.article-list-wrap
.article-single-wrap
  flex 1

.article-list
  background #ffffff

.article-divider
  height 0
  position relative
  &-label
    position absolute
    top 10px
    left -60px
    font-size: 20px
    font-weight: 700
    color: #808080

.article
  display block
  padding 18px 24px

  &:not(:last-child)
    border-bottom: 1px solid $border-color

  &:hover
    background: rgba(0, 0, 0, .01)

  &:visited
    .article__title
      color #909090

  &--recent
    padding: 10px 16px

    .article__title
      font-size 14px
      font-weight: inherit
      display block

  &__title
    color #2e3135
    font-size 16px
    font-weight: 600
    line-height: 1.2

  &__metas
    padding-left 0
    margin-top 6px
    color #b2bac2

  &__meta
    display inline-block

    &:not(:last-child):after
      content: "·"
      color: rgb(178, 186, 194)
      margin: 0 5px

  &__brief
    color lighten($text-color, 20%)
    margin 10px 0
    //multiLineEllipsis()
    overflow: hidden
    display: -webkit-box
    -webkit-line-clamp: 3
    -webkit-box-orient: vertical

  &__content
    margin 10px 0

// 分页器
.pager
  margin-top 10px
  clearfix()

  svg
    vertical-align text-bottom

  &__previous
    float left

  &__next
    float right


