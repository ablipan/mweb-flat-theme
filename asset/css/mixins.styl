// 截取多行文本
// 参考自：http://hackingui.com/front-end/a-pure-css-solution-for-multiline-text-truncation/
multiLineEllipsis($lineHeight = 1.5em, $lineCount = 3, $bgColor = #ffffff)
  overflow: hidden;
  position: relative;
  line-height: $lineHeight;
  max-height: $lineHeight * $lineCount;
  text-align: justify;
  margin-right: -1em;
  padding-right: 1em;
  &:before
    content: '...';
    position: absolute;
    right: 0;
    bottom: 0;
  &:after
    content: '';
    position: absolute;
    right: 0;
    width: 1em;
    height: 1em;
    margin-top: 0.2em;
    background: $bgColor;

clearfix()
  &:after
    clear: both;
    content: " ";
    display: table;
